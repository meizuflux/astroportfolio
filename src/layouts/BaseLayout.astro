---
import "../styles/themes/dark-orange.scss";
import "../styles/prism/atom-dark.css";
import Head from "../components/Head.astro"
import Navigation from "../components/Nav.astro"
import Footer from "../components/Footer.astro"

const { title, description } = Astro.props;
---
<!DOCTYPE html>
    <head>
        <meta charset="UTF-8">
        <title>meizuflux | {title}</title>
        <meta name="description" content={description}>

        <link rel="icon" href="/favicon.ico">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="alternate" type="application/rss+xml" title="RSS Feed for meizuflux.com blog" href="/posts/feed.xml" />
        <link rel="sitemap" type="application/xml" title="Sitemap" href="/sitemap.xml">

        <link href="https://fonts.googleapis.com/css2?family=Poppins&family=Vollkorn&display=swap" rel="stylesheet">

    </head>
    <body>
        <Navigation />
        <slot />
        <Footer />
        <script defer data-domain="meizuflux.com" src="https://analytics.meizuflux.com/js/plausible.local.js"></script>
    </body>

</html>
