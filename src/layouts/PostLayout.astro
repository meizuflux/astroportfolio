---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getReadingTime, formatDate } from "../utils";

const { content } = Astro.props;
const {title, description, tags, created, modified, astro} = content;
---
<style>
    .centered {
        text-align: center;
    }

    .h-stack {
        display: flex;
        justify-content: space-between;
    }
</style>

<BaseLayout title={title} description={description}>
    <div class="centered">
        <h1>{title}</h1>
        <p>{description}</p>
    </div>
    
    <div class="h-stack">
        <p>Uploaded {formatDate(created)} (Last modified {formatDate(modified)})</p>
        <p>{getReadingTime(astro.source)} minute read</p>
    </div>

    <article>
        <slot />
    </article>

    <script src="https://giscus.app/client.js"
        data-repo="meizuflux/astroportfolio"
        data-repo-id="R_kgDOGXnCxw"
        data-category-id="DIC_kwDOGXnCx84B_-9C"
        data-mapping="pathname"
        data-reactions-enabled="1"
        data-emit-metadata="0"
        data-theme="dark_dimmed"
        data-lang="en"
        crossorigin="anonymous"
        async>
    </script>

</BaseLayout>
